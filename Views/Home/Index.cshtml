@model Post

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey</title>
    <link rel="stylesheet" href="~/style.css">
</head>

<body>
    <div class="container">
        <div class="form">
            <form asp-action="ProcessPost" asp-controller="Home" method="POST">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="size"/>
                <span asp-validation-for="Name"></span>
                <label asp-for="Location"></label>
                <select asp-for="Location" class="size">
                    <option value="San Jose">San Jose</option>
                    <option value="Seattle">Seattle</option>
                    <option value="Texas">Texas</option>
                </select>
                <span asp-validation-for="Location"></span>
                <label asp-for="Language"></label>
                <select asp-for="Language" class="size">
                    <option value="C#">C#</option>
                    <option value="Python">Python</option>
                    <option value="JavaScript">JavaScript</option>
                </select>
                <span asp-validation-for="Location"></span>
                <label asp-for="Comment"></label>
                <textarea class="size" name="Comment" cols="10" rows="5"></textarea>
                <button class="size" type="submit">Submit</button>
            </form>
        </div>
    </div>
</body>

</html>